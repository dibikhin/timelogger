%fieldset
	%legend
		%h2= Time.now.strftime '%A, %B %-d'		# e.g. Thursday, May 24
	-# controls
	- case state
	- when 0
		%form{:action => '/start', :method => 'post'}
			%input{:type => 'submit', :value => 'Start', :autofocus => 'true'}
	- when 1
		%form{:action => '/begin_save', :method => 'post'}
			%input{:type => 'button', :value => 'Skip', :onclick => 'window.location="/skip"',
				:autofocus => 'true' }
			%input{:type => 'submit', :value => 'Save'}
			%input{:type => 'button', :value => 'Pause', :onclick => 'window.location="/pause"'}
			or
			%a{:href => '/BeginStopRecording'} stop
	- when 2
		%form{:action => '/end_save', :method => 'post'}
			= haml :currentRecord, :locals => {:currentRecord => todayRecords.first, :state => state}
	- when 3
		%form{:action => '/EndStopRecording', :method => 'post'}
			= haml :currentRecord, :locals => {:currentRecord => todayRecords.first, :state => state}
	- when 4
		%form{:action => '/resume', :method => 'post'}
			%input{:type => 'submit', :value => 'Resume', :autofocus => 'true'}
	-# record list
	- if state == 2 || state == 3
		= haml :recordList, :locals => {:todayRecords => todayRecords.select {|rec| rec.id != currentRecordId}}
	- else
		= haml :recordList, :locals => {:todayRecords => todayRecords}
